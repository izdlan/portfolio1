            if (dot.getAttribute('href') === currentPath) {
                circle.classList.remove('bg-gray-700');
                circle.classList.add('bg-neon', 'nav-dot-active');
            } else {
                circle.classList.remove('bg-neon', 'nav-dot-active');
                circle.classList.add('bg-gray-700');
            }
        });

        // Snowflake click effect
        document.querySelectorAll('.snowflake').forEach(snowflake => {
            snowflake.addEventListener('click', function() {
                // Add popped class for animation
                this.classList.add('popped');
                
                // Remove the snowflake after animation completes
                setTimeout(() => {
                    this.style.visibility = 'hidden';
                    
                    // Reset and show again after a delay
                    setTimeout(() => {
                        this.classList.remove('popped');
                        this.style.visibility = 'visible';
                    }, 3000);
                }, 500);
            });
